<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_lay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pos_sentiment"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/source_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/twitter" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/source_icon"
        android:text="hi this is the latest news"
        android:textColor="#4baad3" />

    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/source_icon"
        android:layout_alignStart="@+id/source_icon"
        android:layout_below="@+id/title"
        android:layout_marginRight="5dp"
        android:paddingTop="3dp"
        android:text="www.mystory.com/dsfbntredscvbgf2134567890-pijhgfvc nmjtredsvbghjhgf788864132hgfdsxccvytreetyjhgfdcxv bhredsfghnb  cccvvbnjytredscvghjhhnb vccxcvnjuyytredsghnb cxvcbvytrfd"
        android:textColor="#287742" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/url"
        android:layout_alignStart="@+id/url"
        android:layout_below="@+id/url"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/roundborder"
        android:maxLines="3"
        android:padding="10dp"
        android:text="this is texting of serach data"
        android:textColor="#666" />

    <TextView
        android:id="@+id/articledate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/author"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:text="2015-09-30 14:23PM"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_below="@+id/text"
        android:gravity="left"
        android:padding="5dp"
        android:text="BY-sujith"
        android:textColor="#f0ad4e" />

</RelativeLayout>

