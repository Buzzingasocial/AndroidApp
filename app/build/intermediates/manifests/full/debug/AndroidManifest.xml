<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.headrun.buzzinga"
    android:versionCode="1"
    android:versionName="0.9" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="in.headrun.buzzinga.BuzzingaApplication"
        android:allowBackup="true"
        android:icon="@drawable/buzz_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="in.headrun.buzzinga.activities.SplashActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.headrun.buzzinga.activities.TwitterLogin"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.headrun.buzzinga.activities.MainActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TrackKeyWord" />
        </activity>

        <!--
                <activity android:name=".utils.SearchActivity">
                    <intent-filter>
                        <action android:name="android.intent.action.SEARCH" />
                    </intent-filter>
                    <meta-data
                        android:name="android.app.searchable"
                        android:resource="@xml/searchable" />
                </activity>
        -->

        <activity
            android:name="in.headrun.buzzinga.activities.Filtering"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.headrun.buzzinga.activities.TrackKeyWord"
            android:configChanges="orientation"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="in.headrun.buzzinga.activities.ArticleWebDisplay"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <!--
                <activity
                    android:name=".dashboard.ListViewMultiChartActivity"
                    android:configChanges="orientation"
                    android:label="@string/app_name"
                    android:screenOrientation="portrait" />
        -->
        <receiver
            android:name="in.headrun.buzzinga.BootUpReceiver"
            android:enabled="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <receiver android:name="in.headrun.buzzinga.BuzzingaNotification" />

        <service
            android:name="in.headrun.buzzinga.utils.BuzzingaNotificationService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>